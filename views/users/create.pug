extends ../common.pug

block content

  if errors
    each error in errors
      .alert.alert-warning.col-5=error

  form(action='/users/create' method='POST' enctype="multipart/form-data")
    .form-group
      label(for='usersName') User Name
      input.form-control.col-5(type='text', placeholder='Enter Name', name='name',value=values? values.name:'',required)
    .form-group
      label(for='userPhone') Phone Number
      input.form-control.col-5(type='text', placeholder='Phone Number',name='phone',value=values?values.phone:'',required)
    .form-group
      label(for='mail') Mail
      input.form-control.col-5(type='text', placeholder='Enter email', name='mail',value=values? values.mail:'',required)
    .form-group
      label(for='password') Password
      input.form-control.col-5(type='text', placeholder='Enter Password', name='password',value=values? values.password:'',required)
    .form-group
      label(for='avatar') Avatar
      input#avatar.form-control-file(type='file',name='avatar',required)

    .form-check
      input.form-check-input(type='checkbox', value='checked',name='isAdmin')
      label.form-check-label(for='isAdmin') isAdmin
    br
    button.btn.btn-primary(type='submit') Submit